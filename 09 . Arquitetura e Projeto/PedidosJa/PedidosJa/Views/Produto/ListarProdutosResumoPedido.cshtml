@model IEnumerable<Model.Models.Produto>

@{
    ViewBag.Title = "Resumo do Pedido";
}

<h2>Resumo do Pedido</h2>

<p>
    @Html.ActionLink("Voltar para lista de produtos", "SelecionarProdutoPedido")
</p>

<p>
    @Html.ActionLink("Finalizar Pedido", "FinalizarPedido", "Pedido")
</p>

<p>
    TOTAL (R$) : @ViewBag.Total
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Preço Unit. (R$)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preco)
        </td>
    </tr>
}

</table>
